{
  "head0": {
    "type": "header",
    "description": "API Settings"
  },
  "github-username": {
    "type": "entry",
    "default": "",
    "description": "GitHub Username"
  },
  "github-token": {
    "type": "entry",
    "default": "",
    "description": "GitHub Token"
  },
  "refresh-interval": {
    "type": "spinbutton",
    "default": 15,
    "min": 1,
    "max": 60,
    "step": 1,
    "description": "Refresh interval in minutes"
  },
  "head1": {
    "type": "header",
    "description": "Style"
  },
  "scale-size": {
    "type": "scale",
    "default": 1,
    "min": 0.5,
    "max": 3,
    "step": 0.05,
    "description": "Desklet scale size"
  },
  "block-size": {
    "type": "scale",
    "default": 11,
    "min": 5,
    "max": 50,
    "step": 1,
    "description": "Block size in pixels"
  },
  "background-color": {
    "type": "colorchooser",
    "default": "rgba(255, 255, 255, 0)",
    "description": "Background color"
  },
  "show-contribution-count": {
    "type": "checkbox",
    "default": false,
    "description": "Show contribution count"
  },
  "show-username": {
    "type": "checkbox",
    "default": true,
    "description": "Show username"
  },
  "hide-decorations": {
    "type": "checkbox",
    "description": "Hide decorations",
    "default": true
  }
}
