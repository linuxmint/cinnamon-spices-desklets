{
  "layout": {
    "type": "layout",
    "pages": ["general-page", "style-page", "block-colors-page"],
    "general-page": {
      "type": "page",
      "title": "General",
      "sections": ["api-section"]
    },
    "style-page": {
      "type": "page",
      "title": "Style",
      "sections": ["style-section"]
    },
    "block-colors-page": {
      "type": "page",
      "title": "Block colors",
      "sections": ["colors-section"]
    },
    "api-section": {
      "type": "section",
      "title": "API Settings",
      "keys": ["github-username", "github-token", "refresh-interval"]
    },
    "style-section": {
      "type": "section",
      "title": "Style",
      "keys": ["scale-size", "block-size", "background-color", "show-contribution-count", "show-username", "hide-decorations"]
    },
    "colors-section": {
      "type": "section",
      "title": "Colors",
      "keys": ["color-preset", "color-0", "color-1", "color-4", "color-6", "color-9", "color-10"]
    }
  },
  "github-username": {
    "type": "entry",
    "default": "",
    "description": "GitHub Username"
  },
  "github-token": {
    "type": "entry",
    "default": "",
    "description": "GitHub Token"
  },
  "refresh-interval": {
    "type": "spinbutton",
    "default": 15,
    "min": 1,
    "max": 60,
    "step": 1,
    "description": "Refresh interval in minutes"
  },
  "scale-size": {
    "type": "scale",
    "default": 1,
    "min": 0.5,
    "max": 3,
    "step": 0.05,
    "description": "Desklet scale size"
  },
  "block-size": {
    "type": "scale",
    "default": 11,
    "min": 5,
    "max": 50,
    "step": 1,
    "description": "Block size in pixels"
  },
  "background-color": {
    "type": "colorchooser",
    "default": "rgba(255, 255, 255, 0)",
    "description": "Background color"
  },
  "show-contribution-count": {
    "type": "checkbox",
    "default": false,
    "description": "Show contribution count"
  },
  "show-username": {
    "type": "checkbox",
    "default": true,
    "description": "Show username"
  },
  "hide-decorations": {
    "type": "checkbox",
    "description": "Hide decorations",
    "default": true
  },
  "color-0": {
    "type": "colorchooser",
    "default": "#151b23",
    "description": "0 Contributions"
  },
  "color-1": {
    "type": "colorchooser",
    "default": "#033a16",
    "description": "1-3 Contributions"
  },
  "color-4": {
    "type": "colorchooser",
    "default": "#196c2e",
    "description": "4-5 Contributions"
  },
  "color-6": {
    "type": "colorchooser",
    "default": "#196c2e",
    "description": "6-8 Contributions"
  },
  "color-9": {
    "type": "colorchooser",
    "default": "#2ea043",
    "description": "9 Contributions"
  },
  "color-10": {
    "type": "colorchooser",
    "default": "#56d364",
    "description": "10+ Contributions"
  },
  "color-preset": {
    "type": "combobox",
    "default": "default",
    "options": {
      "default": "default",
      "blue-dark": "blue-dark",
      "green-dark": "green-dark",
      "yellow-dark": "yellow-dark",
      "orange-dark": "orange-dark",
      "red-dark": "red-dark",
      "magenta-dark": "magenta-dark",
      "purple-dark": "purple-dark",
      "gruvbox-dark": "gruvbox-dark",
      "default-light": "default-light",
      "blue-light": "blue-light",
      "green-light": "green-light",
      "yellow-light": "yellow-light",
      "orange-light": "orange-light",
      "red-light": "red-light",
      "magenta-light": "magenta-light",
      "purple-light": "purple-light",
      "gruvbox-light": "gruvbox-light"
    },
    "description": "Color preset"
  }
}
