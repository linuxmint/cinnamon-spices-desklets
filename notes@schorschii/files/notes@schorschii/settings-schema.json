{
    "head0": {
        "type": "header",
        "description": "Settings for notes@schorschii"
    },

    "head1": {
        "type": "header",
        "description": "General"
    },
    "file": {
        "type": "filechooser",
        "default": "",
        "description": "Path to note text file",
        "tooltip": "Select your text file, where to read from and save to.",
        "allow-none" : true
    },
    "edit-cmd": {
        "type": "entry",
        "default": "xed %f",
        "description": "Command for editing this note (on mouse click)",
        "tooltip": "%f will replaced by the text file path.",
        "allow-none" : true
    },

    "head2": {
        "type": "header",
        "description": "Visual"
    },
    "bg-img" : {
        "type": "combobox",
        "default" : "bg_yellow.svg",
        "description" : "Notes style",
        "options" : {
            "White" : "bg_white.svg",
            "Yellow": "bg_yellow.svg",
            "None": "none"
        },
        "tooltip" : "Select the background graphic you would like to use."
    },
    "hide-decorations": {
        "type": "checkbox",
        "description": "Hide decorations",
        "default": false
    },
    "font": {
        "type": "entry",
        "description": "Font",
        "default": "Purisa"
    },
    "size-font": {
        "type": "spinbutton",
        "default": 13,
        "min": 5,
        "max": 100,
        "step": 1,
        "units": "pixels",
        "description": "Font size",
        "tooltip": "Increase or decrease the size of this desklet using this scale factor."
    },
    "text-color": {
        "type": "colorchooser",
        "default": "rgba(10,10,110,0.9)",
        "description": "Text color",
        "tooltip": "Set the text color of this desklet."
    },
    "scale-size": {
        "type": "spinbutton",
        "default": 2,
        "min": 0.5,
        "max": 10,
        "step": 0.2,
        "units": "scale factor",
        "description": "Desklet size",
        "tooltip": "Increase or decrease the size of this desklet using this scale factor."
    },
    "size-width": {
        "type": "spinbutton",
        "default": 130,
        "min": 10,
        "max": 1000,
        "step": 1,
        "units": "pixels",
        "description": "Desklet width",
        "tooltip": "Increase or decrease the size of this desklet using this scale factor."
    },
    "size-height": {
        "type": "spinbutton",
        "default": 130,
        "min": 10,
        "max": 1000,
        "step": 1,
        "units": "pixels",
        "description": "Desklet height",
        "tooltip": "Increase or decrease the size of this desklet using this scale factor."
    },

    "head3": {
        "type": "header",
        "description": "Custom desklet label (only visible if decorations are enabled)"
    },
    "use-custom-label": {
        "type": "checkbox",
        "default": false,
        "description": "Use a custom desklet label",
        "tooltip": "Checking this box allows you to set a custom label in the field below.",
        "value": false
    },
    "custom-label": {
        "type": "entry",
        "default": "Note 1",
        "description": "Custom desklet label",
        "indent": true,
        "dependency": "use-custom-label",
        "tooltip": "Set your custom label here. This field is unavailable unless the checkbox above is enabled."
    }
}
