{
  "image-path": {
    "type": "filechooser",
    "default": "",
    "description": "Image path",
    "tooltip": "The path of the image.",
    "allow-none": false,
    "select-dir": false
  },
  "shape": {
    "type": "combobox",
    "default": "wave",
    "description": "Shape",
    "options": {
      "Circle": "circle",
      "Square": "square",
      "Star": "star",
      "Wave": "wave"
    }
  },
  "size": {
    "type": "scale",
    "default": 150,
    "min": 30,
    "max": 800,
    "step": 1,
    "description": "Size"
  },
  "show-border": {
    "type": "checkbox",
    "default": true,
    "description": "Show border"
  },
  "border-color": {
    "type": "colorchooser",
    "default": "rgb(255,255,255)",
    "description": "Border color",
    "dependency": "show-border"
  },
  "border-width": {
    "type": "scale",
    "default": 4,
    "min": 1,
    "max": 30,
    "step": 1,
    "description": "Border width",
    "dependency": "show-border"
  }
}
