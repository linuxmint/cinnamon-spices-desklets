{
  "layout": {
    "type": "layout",
    "pages": [
      "page_servers",
      "page_style"
    ],
    "page_servers": {
      "type": "page",
      "title": "Servers for checks",
      "sections": [
        "section_servers"
      ]
    },
    "page_style": {
      "type": "page",
      "title": "Desklet Style",
      "sections": [
        "section_text_color",
        "section_background",
        "section_width"
      ]
    },
    "section_servers": {
      "type": "section",
      "title": "",
      "keys": [
        "ServerNames",
        "TimeRepeat"
      ]
    },
    "section_text_color": {
      "type": "section",
      "title": "",
      "keys": [
        "TextColorBasic",
        "TextColorOK",
        "TextColorWARN",
        "TextColorERR"
      ]
    },
    "section_background": {
      "type": "section",
      "title": "",
      "keys": [
        "ContainerBgColor",
        "BoxBgColor"
      ]
    },
    "section_width": {
      "type": "section",
      "title": "",
      "keys": [
        "FontSize",
        "ContainerFixedWidth",
        "ContainerWidth"
      ]
    }
  },

  "ServerNames": {
    "type": "list",
    "description": "Status for this Servers:",
    "tooltip": "You can set only types: ping, http or https",
    "columns": [
      {
        "id": "name",
        "title": "Name",
        "type": "string"
      },
      {
        "id": "ip",
        "title": "IP or Domen",
        "type": "string"
      },
      {
        "id": "type",
        "title": "Type for check",
        "align": 0.5,
        "type": "string",
        "default": "ping",
        "options": {
          "ping": "ping",
          "http": "http",
          "https": "https"
        }
      },
      {
        "id": "display",
        "title": "Display it?",
        "align": 0.5,
        "type": "boolean",
        "default": true
      }
    ],
    "default": [{
      "name": "Cloudflare",
      "ip": "1.1.1.1",
      "type": "ping",
      "display": true
    }]
  },

  "TimeRepeat": {
    "default": 10,
    "type": "scale",
    "min": 1,
    "max": 180,
    "description": "Update every (seconds):",
    "step": 1
  },

  "TextColorBasic": {
    "type": "colorchooser",
    "indent": true,
    "default": "rgb(255,255,255)",
    "description": "Basic text color",
    "tooltip": "Click the button to select a new text color for Basic text"
  },

  "TextColorOK": {
    "type": "colorchooser",
    "indent": true,
    "default": "rgb(0,255,0)",
    "description": "Text color for OK",
    "tooltip": "Click the button to select a new text color for successful connect"
  },

  "TextColorWARN": {
    "type": "colorchooser",
    "indent": true,
    "default": "rgb(255,255,0)",
    "description": "Text color for WARNING",
    "tooltip": "Click the button to select a new text color for warning in connect status"
  },

  "TextColorERR": {
    "type": "colorchooser",
    "indent": true,
    "default": "rgb(255,0,0)",
    "description": "Text color for ERROR",
    "tooltip": "Click the button to select a new text color for error in connect"
  },

  "ContainerBgColor": {
    "type": "colorchooser",
    "indent": true,
    "default": "rgba(0,0,0,0.2)",
    "description": "Color for container background",
    "tooltip": "Click the button to select a new background color for basic container"
  },

  "BoxBgColor": {
    "type": "colorchooser",
    "indent": true,
    "default": "rgba(0,0,0,0.2)",
    "description": "Color for element background",
    "tooltip": "Click the button to select a new background color for each elements"
  },

  "FontSize": {
    "type": "spinbutton",
    "default": 16,
    "min": 4,
    "max": 200,
    "step": 1,
    "description": "Font size",
    "units": "pixels"
  },

  "ContainerFixedWidth": {
    "type": "checkbox",
    "default": false,
    "description": "Set a fixed width for the container",
    "tooltip": "Enable checkbox to set the fixed width of the container"
  },

  "ContainerWidth": {
    "dependency": "ContainerFixedWidth",
    "type": "spinbutton",
    "default": 200,
    "min": 40,
    "max": 4000,
    "step": 10,
    "description": "Container width",
    "units": "pixels"
  }
}
