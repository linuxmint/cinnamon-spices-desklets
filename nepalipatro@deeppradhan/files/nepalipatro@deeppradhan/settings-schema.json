{
	"top": {
		"type": "header",
		"description": "Calendar configuration"
	},

	"language": {
		"type": "combobox",
		"default": "ne",
		"description": "Display language",
		"options": {
			"English": "en",
			"नेपाली (Nepali)": "ne"
		},
		"tooltip": "Select the language of desklet"
	},

	"panels": {
		"type": "combobox",
		"default": "both",
		"description": "Panels to show",
		"options": {
			"Both Today & Month": "both",
			"Today only": "today",
			"Month only": "month"
		},
		"tooltip": "Select the panels to display in desklet"
	},

	"show-weekday": {
		"type": "combobox",
		"default": "full",
		"description": "Show day of week",
		"options": {
			"No": "off",
			"Full": "full",
			"Short": "short"
		},
		"tooltip": "For day of week; show full name, short name or disable showing"
	},

	"short-month-name": {
		"type": "checkbox",
		"default": false,
		"description": "Short month name",
		"tooltip": "Show short Bikram Sambat month name"
	},

	"show-year": {
		"type": "combobox",
		"default": "full",
		"description": "Show Bikram Sambat year",
		"options": {
			"No": "off",
			"Full": "full",
			"Short": "short"
		},
		"tooltip": "For Bikram Sambat year; show all digits, show last two digits or disable showing"
	},

	"show-time": {
		"type": "checkbox",
		"default": true,
		"description": "Show time",
		"tooltip": "Show or hide time (hours and minutes)"
	},

	"time-zone": {
		"type": "combobox",
		"default": "nepali",
		"description": "Time/Date TimeZone",
		"options": {
			"Nepali TimeZone": "nepali",
			"System TimeZone": "local"
		},
		"tooltip": "Show calendar/time as per the current system/Nepali TimeZone"
	},

	"seperator" : {
		"type" : "separator"
	},

	"display" : {
		"type" : "header",
		"description" : "Desklet style configuration"
	},

	"layout": {
		"type": "combobox",
		"default": "horizontal",
		"description": "Layout of desklet",
		"options": {
			"Horizontal": "horizontal",
			"Vertical": "vertical"
		},
		"tooltip": "Set the overall layout to horizontal/vertical of desklet"
	},

	"font-family": {
		"type": "combobox",
		"default": "Noto Sans Devanagari",
		"description": "Font family for text",
		"options": {
			"Default": "default",
			"Gargi": "Gargi",
			"Kalimati": "Kalimati",
			"Lohit Devanagari": "Lohit Devanagari",
			"Noto Sans Devanagari": "Noto Sans Devanagari",
			"Noto Sans Devanagari UI": "Noto Sans Devanagari UI",
			"Samanata": "Samanata",
			"Samyak Devanagari": "Samyak Devanagari",
			"Sarai": "Sarai",
			"Custom": "custom-font-family"
		},
		"tooltip": "Set a font family for the text (common Devanagari fonts are listed and MAY or MAY NOT be available on your system)"
	},

  "custom-font-family": {
    "type": "entry",
    "default": "",
    "description": "Custom font family for text (also set 'Font family' above to 'Custom')",
    "tooltip": "Set a custom font family for the text (to use a custom font family, set 'Font family' above to 'Custom')"
  },

	"font-size": {
		"type": "scale",
		"default": 12,
		"min": 6,
		"max": 36,
		"step": 0.5,
		"description": "Font size (pt)",
		"tooltip": "Set the text font size in points"
	},

  "colour-text": {
		"type": "colorchooser",
		"indent": true,
		"default" : "rgb(255,255,255)",
		"description" : "Text colour",
		"tooltip" : "Set text colour of desklet"
	},

  "colour-saturdays": {
		"type": "colorchooser",
		"default" : "rgb(160,160,160)",
		"description" : "Text colour for Saturdays",
		"tooltip" : "Set text colour for Saturdays"
	},

  "colour-sundays": {
		"type": "colorchooser",
		"default" : "rgb(160,160,160)",
		"description" : "Text colour for Sundays",
		"tooltip" : "Set text colour for Sundays"
	},

	"colour-background": {
		"type": "colorchooser",
		"indent": true,
		"default" : "rgb(0,0,0)",
		"description" : "Background colour",
		"tooltip" : "Set background colour of desklet"
	},

	"transparency": {
		"type": "scale",
		"indent": true,
		"default": 50,
		"min": 0,
		"max": 100,
		"step": 1,
		"description": "Transparency (%)",
		"tooltip": "Set the transparency of desklet in percentage"
	}
}
