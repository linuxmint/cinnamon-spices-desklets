{
  "top": {
    "type": "header",
    "description": "Clock configuration"
  },
  "font-size": {
    "type": "spinbutton",
    "default": 40,
    "min": 10,
    "max": 200,
    "units": "px",
    "description": "Font size",
    "step": 1
  },
  "text-color": {
    "type": "colorchooser",
    "default": "rgb(255,255,255)",
    "description": "Text color"
  },
  "background-color": {
    "type": "colorchooser",
    "default": "rgba(0, 0, 0, 0.363)",
    "description": "background color"
  },
  "weatherconf": {
    "type": "header",
    "description": "weather data service settings"
  },
  "show-weather-data": {
    "type": "switch",
    "default": true,
    "description": "Show weather"
  },
  "webservice": {
    "type": "combobox",
    "default": "Open Metro",
    "dependency": "show-weather-data",
    "description": "Data service",
    "options": {
      "Open-Metro": "Open Metro",
      "Open Weather Map Free (requires API key)": "openweathermap"
    }
  },
  "api-key": {
    "type": "entry",
    "default": "",
    "description": "API key",
    "indent": true,
    "dependency": "show-weather-data",
    "tooltip": "put your API key generated from open-weather-map here"
  },
  "location-type": {
    "type": "combobox",
    "default": "city",
    "dependency": "show-weather-data",
    "description": "Type of location data",
    "options": {
      "city name": "city",
      "lat-lon": "lat-lon"
    }
  },
  "location": {
    "type": "entry",
    "default": "kolkata",
    "dependency": "show-weather-data",
    "description": "put your location",
    "indent": true,
    "tooltip": "put your lat-long generated from lat-long.html page"
  },
  "design": {
    "type": "header",
    "description": "customize font and bg color",
    "dependency": "show-weather-data"
  },
  "weather-text-color": {
    "type": "colorchooser",
    "dependency": "show-weather-data",
    "default": "rgb(255,255,255)",
    "description": "weather block text color"
  },
  "weather-background-color": {
    "type": "colorchooser",
    "dependency": "show-weather-data",
    "default": "rgba(0, 0, 0, 0.363)",
    "description": "weather-block bg-color"
  }
}
