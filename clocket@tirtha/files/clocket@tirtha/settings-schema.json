{
  "general": {
    "type": "header",
    "description": "General settings"
  },
  "scale-size": {
    "type": "scale",
    "default": 1.0,
    "step": 0.1,
    "min": 0.3,
    "max": 3.0,
    "description": "Desklet scale size"
  },
  "clock-settings": {
    "type": "header",
    "description": "Clock style"
  },
  "font-size-clock": {
    "type": "spinbutton",
    "default": 40,
    "min": 10,
    "max": 200,
    "units": "px",
    "description": "Font size",
    "step": 1
  },
  "text-color": {
    "type": "colorchooser",
    "default": "rgb(255,255,255)",
    "description": "Text color"
  },
  "background-color": {
    "type": "colorchooser",
    "default": "rgba(0, 0, 0, 0.363)",
    "description": "background color"
  },
  "weather-settings": {
    "type": "header",
    "description": "Weather data service"
  },
  "show-weather-data": {
    "type": "switch",
    "default": true,
    "description": "Show weather"
  },
  "temperature-unit": {
    "type": "combobox",
    "default": "celsius",
    "dependency": "show-weather-data",
    "description": "Units for weather data",
    "options": {
      "°C": "celsius",
      "°F": "fahrenheit"
    }
  },
  "webservice": {
    "type": "combobox",
    "default": "Open Metro",
    "dependency": "show-weather-data",
    "description": "Data service",
    "options": {
      "Open-Metro": "Open Metro",
      "Open Weather Map Free (requires API key)": "openweathermap"
    }
  },
  "api-key": {
    "type": "entry",
    "default": "",
    "description": "API key",
    "indent": true,
    "dependency": "show-weather-data"
  },
  "location-type": {
    "type": "combobox",
    "default": "automatic",
    "dependency": "show-weather-data",
    "description": "Type of location data",
    "options": {
      "city name": "city",
      "lat-lon": "lat-lon",
      "Automatic": "automatic"
    }
  },
  "location": {
    "type": "entry",
    "default": "",
    "dependency": "show-weather-data",
    "description": "Location (city name or lat-lon)",
    "indent": true,
    "tooltip": "city name (e.g. London) or lat-lon (e.g. 51.5074456,-0.1277653)"
  },
  "weather-refresh-interval": {
    "type": "spinbutton",
    "default": 10,
    "min": 1,
    "max": 1440,
    "units": "minutes",
    "description": "Weather data refresh interval",
    "dependency": "show-weather-data",
    "step": 1
  },
  "design": {
    "type": "header",
    "description": "Weather style",
    "dependency": "show-weather-data"
  },
  "weather-text-color": {
    "type": "colorchooser",
    "dependency": "show-weather-data",
    "default": "rgb(255,255,255)",
    "description": "Weather text color"
  },
  "weather-background-color": {
    "type": "colorchooser",
    "dependency": "show-weather-data",
    "default": "rgba(0, 0, 0, 0.363)",
    "description": "Weather background color"
  }
}
