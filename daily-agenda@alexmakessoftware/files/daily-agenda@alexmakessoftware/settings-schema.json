{
  "head0": {
    "type": "header",
    "description": "Calendar Source"
  },

  "sourceType": {
    "type": "combobox",
    "default": "url",
    "description": "Calendar source",
    "options": {
      "From URL": "url",
      "From local file": "file"
    }
  },

  "icsUrl": {
    "type": "entry",
    "default": "",
    "description": "Calendar URL",
    "tooltip": "Only used if source is set to 'From URL'. Paste a public .ics (calendar share) link from Proton, Google, etc."
  },

  "icsFilePath": {
    "type": "filechooser",
    "default": "",
    "description": "Path to local .ics file",
    "tooltip": "Only used if source is set to 'From local file', point to an ICS file.",
    "allow-none": true
  },

  "head1": {
    "type": "header",
    "description": "Widget Dimensions"
  },

  "width": {
    "type": "spinbutton",
    "default": 250,
    "min": 100,
    "max": 1000,
    "step": 10,
    "units": "px",
    "description": "Widget width"
  },

  "height": {
    "type": "spinbutton",
    "default": 150,
    "min": 50,
    "max": 1000,
    "step": 10,
    "units": "px",
    "description": "Widget height"
  },

  "head2": {
    "type": "header",
    "description": "Text Style"
  },

  "font": {
    "type": "entry",
    "default": "Sans",
    "description": "Font family",
    "tooltip": "Example: Sans, Monospace, Serif"
  },

  "fontSize": {
    "type": "spinbutton",
    "default": 10,
    "min": 6,
    "max": 48,
    "step": 1,
    "units": "pt",
    "description": "Font size"
  },


  "head3": {
    "type": "header",
    "description": "Update Schedule"
  },

  "checkInterval": {
    "type": "spinbutton",
    "default": 20,
    "min": 1,
    "max": 1440,
    "step": 1,
    "units": "minutes",
    "description": "Check interval",
    "tooltip": "How often to check the calendar file for updates"
  }
}
