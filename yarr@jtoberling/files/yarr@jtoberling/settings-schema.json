{
  "layout1": {
    "type": "layout",
    "pages": ["page1", "page2", "page3", "page4"],

    "page1": {
      "type": "page",
      "title": "Feed settings",
      "sections": ["section0"]
    },

    "page2": {
      "type": "page",
      "title": "Display settings",
      "sections": ["section1", "section1ai"]
    },

    "page3": {
      "type": "page",
      "title": "AI settings",
      "sections": ["section2"]
    },

    "page4": {
      "type": "page",
      "title": "Debug settings",
      "sections": ["section3"]
    },

    "section0": {
      "type": "section",
      "title": "Feed settings",
      "keys": [
        "refreshsettingsbutton",
        "searchRssButton",
        "feeds",
        "refreshInterval-spinner",
        "numberofitems",
        "filterlabel",
        "listfilter"
      ]
    },

    "section1": {
      "type": "section",
      "title": "Display settings",
      "keys": [
        "refreshsettingsbutton",
        "backgroundColor",
        "transparency",
        "alternateRowTransparency",
        "width",
        "height",
        "font",
        "text-color",
        "enablecopy",
        "enableFeedButton",
        "enableTimestamp",
        "enableFavoriteFeature",
        "loadFavoritesOnStartup",
        "showRefreshSeparators",
        "articleSpacing",
        "showReadStatusCheckbox",
        "dimReadTitles",
        "readTitleColor",
        "enableHeaderFeedButtons"
      ]
    },

    "section1ai": {
      "type": "section",
      "title": "Display settings for AI feature",
      "keys": ["refreshsettingsbutton", "ai_font", "ai_text-color"]
    },

    "section2": {
      "type": "section",
      "title": "AI settings",
      "keys": [
        "ai_label-info",
        "ai_enablesummary",
        "ai_provider",
        "ai_apikey",
        "ai_use_custom_url",
        "ai_url",
        "ai_use_standard_model",
        "ai_model",
        "ai_custom_model",
        "ai_systemprompt",
        "ai_example1",
        "ai_example2",
        "ai_example3",
        "ai_example4",
        "ai_example5",
        "ai_example6",
        "ai_add_description_to_summary",
        "ai_dumptool",
        "temperature"
      ]
    },

    "section3": {
      "type": "section",
      "title": "Debug settings",
      "keys": [
        "refreshsettingsbutton",
        "enableDebugLogs",
        "debugVerbosity",
        "databasePath",
        "databaseInfo",
        "openLookingGlass",
        "restartDesklet"
      ]
    }
  },

  "feeds": {
    "type": "list",
    "description": "Feed settings (supports RSS and Atom)",
    "columns": [
      { "id": "name", "title": "Name", "type": "string" },
      { "id": "active", "title": "Active", "type": "boolean", "default": true },
      { "id": "url", "title": "Feed URL", "type": "string", "default": "" },

      {
        "id": "labelcolor",
        "title": "Label Color (#rrggbb)",
        "type": "string",
        "default": "#ffffff",
        "description": "",
        "tooltip": "#rrggbb (eg: #ffffff --> white)"
      },
      {
        "id": "filter",
        "title": "ChannelFilter (Regexp eg: '.*')",
        "type": "string",
        "default": "",
        "description": "Regexp filter on channels",
        "tooltip": "Leave empty for all"
      }
    ],
    "default": [
      {
        "name": "NYT",
        "active": true,
        "url": "https://rss.nytimes.com/services/xml/rss/nyt/HomePage.xml",
        "labelcolor": "#604020",
        "filter": ""
      },
      {
        "name": "BBC",
        "active": true,
        "url": "http://feeds.bbci.co.uk/news/world/rss.xml",
        "labelcolor": "#505000",
        "filter": ""
      },
      {
        "name": "24.hu",
        "active": true,
        "url": "http://24.hu/feed/",
        "labelcolor": "#400000",
        "filter": ""
      }
    ]
  },
  "backgroundColor": {
    "type": "colorchooser",
    "default": "rgb(0,40,64)",
    "description": "Background color"
  },
  "transparency": {
    "type": "scale",
    "default": 0.8,
    "min": 0.0,
    "max": 1.0,
    "step": 0.05,
    "description": "Background transparency",
    "tooltip": "The higher the value, the more solid the desklet background."
  },
  "alternateRowTransparency": {
    "type": "scale",
    "default": 0.3,
    "min": 0.0,
    "max": 1.0,
    "step": 0.05,
    "description": "Dim of every second rows",
    "tooltip": "The higher the value, more dim on alternate row backgrounds."
  },
  "refreshInterval-spinner": {
    "type": "spinbutton",
    "default": 1800,
    "min": 10,
    "max": 36000,
    "step": 10,
    "units": "seconds",
    "description": "Refresh Interval for Display",
    "tooltip": "Increase or decrease this spinner value to change the refresh interval"
  },
  "width": {
    "type": "spinbutton",
    "default": 900,
    "min": 40,
    "max": 4000,
    "step": 20,
    "description": "Width",
    "units": "pixels",
    "tooltip": "Desklet width in pixels."
  },
  "height": {
    "type": "spinbutton",
    "default": 640,
    "min": 40,
    "max": 4000,
    "step": 20,
    "units": "pixels",
    "description": "Height",
    "tooltip": "Desklet height in pixels."
  },
  "font": {
    "type": "fontchooser",
    "default": "Ubuntu Regular 12",
    "description": "Font"
  },
  "text-color": {
    "type": "colorchooser",
    "default": "rgb(48,192,128)",
    "description": "Text color",
    "tooltip": "Click the button to select a new text color"
  },
  "ai_font": {
    "type": "fontchooser",
    "default": "Ubuntu Regular 10",
    "description": "Font for explanation text"
  },
  "ai_text-color": {
    "type": "colorchooser",
    "default": "rgb(255,164,72)",
    "description": "Text color of explanation",
    "tooltip": "Click the button to select a new text color"
  },
  "numberofitems": {
    "type": "spinbutton",
    "default": 75,
    "min": 10,
    "max": 300,
    "step": 1,
    "description": "Number of displayed articles",
    "tooltip": "Number of displayed articles in the list window."
  },

  "filterlabel": {
    "type": "label",
    "description": "Exclude filters for articles"
  },

  "listfilter": {
    "type": "list",
    "description": "Message RegExp filters",
    "columns": [
      { "id": "name", "title": "Name", "type": "string" },
      { "id": "active", "title": "Active", "type": "boolean", "default": true },
      {
        "id": "unmatch",
        "title": "Unmatch",
        "type": "boolean",
        "default": false
      },
      {
        "id": "filter",
        "title": "Filter (Regexp eg: '.*')",
        "type": "string",
        "default": "",
        "description": "Regexp filter on channels",
        "tooltip": "Leave empty for all"
      },
      {
        "id": "inTitle",
        "title": "Match in Title",
        "type": "boolean",
        "default": true
      },
      {
        "id": "inCategory",
        "title": "Match in Category",
        "type": "boolean",
        "default": true
      },
      {
        "id": "inDescription",
        "title": "Match in Description",
        "type": "boolean",
        "default": false
      }
    ],
    "default": []
  },

  "ai_label-info": {
    "type": "label",
    "description": "AI-powered article summarization using various language models. Configure your preferred AI service and summarization behavior."
  },

  "ai_enablesummary": {
    "description": "Enable AI article summarization",
    "type": "switch",
    "default": false
  },

  "ai_add_description_to_summary": {
    "description": "Include article description",
    "type": "switch",
    "default": true
  },

  "ai_provider": {
    "type": "combobox",
    "default": "openai",
    "description": "AI Service Provider",
    "options": {
      "OpenAI (GPT models)": "openai",
      "DeepSeek (coding focus)": "deepseek",
      "Anthropic (Claude models)": "anthropic",
      "Custom API": "custom"
    },
    "tooltip": "Select your AI service provider. Each provider has different model capabilities and pricing."
  },

  "ai_use_custom_url": {
    "description": "Override default API endpoint",
    "type": "switch",
    "default": false,
    "tooltip": "Enable to use a custom API endpoint instead of the provider's default"
  },

  "ai_url": {
    "description": "Custom API endpoint",
    "type": "entry",
    "default": "https://api.openai.com/v1/chat/completions",
    "indent": false,
    "dependency": "ai_use_custom_url=true",
    "tooltip": "Enter the API endpoint URL to override the default provider endpoint (useful for local models, custom deployments, etc.)"
  },

  "ai_dumptool": {
    "type": "combobox",
    "default": "w3m",
    "description": "Content extractor",
    "options": {
      "w3m": "w3m",
      "lynx": "lynx",
      "links": "links"
    },
    "tooltip": "Tool to extract article content from web pages. Install: apt install w3m (or lynx/links)"
  },

  "ai_use_standard_model": {
    "type": "combobox",
    "default": "optionstandard",
    "description": "Model selection",
    "tooltip": "Choose from predefined models or enter a custom model name",
    "options": {
      "Predefined models": "optionstandard",
      "Custom model": "optioncustom"
    }
  },

  "ai_model": {
    "type": "combobox",
    "default": "gpt-4o-mini",
    "description": "Standard model to use",
    "options": {
      "gpt-5": "gpt-5",
      "gpt-4o": "gpt-4o",
      "gpt-4o-mini": "gpt-4o-mini",
      "gpt-4-turbo": "gpt-4-turbo",
      "gpt-4": "gpt-4",
      "gpt-3.5-turbo": "gpt-3.5-turbo",
      "deepseek-chat": "deepseek-chat",
      "deepseek-coder": "deepseek-coder",
      "deepseek-coder-v2:latest": "deepseek-coder-v2:latest",
      "deepseek-math": "deepseek-math",
      "claude-3-5-sonnet": "claude-3-5-sonnet",
      "claude-3-5-haiku": "claude-3-5-haiku",
      "claude-3-opus": "claude-3-opus",
      "claude-3-sonnet": "claude-3-sonnet",
      "claude-3-haiku": "claude-3-haiku",
      "Custom": "custom"
    },
    "tooltip": "GPT-5 is the latest model (requires GPT-5 access).\nGPT-4o models offer best performance/value.\nDeepSeek models are great for coding.\nClaude models via compatible APIs.\nSelect 'Custom' to use your own model name."
  },

  "ai_custom_model": {
    "description": "Custom model name",
    "type": "entry",
    "default": "",
    "dependency": "ai_use_standard_model=optioncustom",
    "tooltip": "Enter the exact model name from your AI provider",
    "indent": false
  },

  "ai_systemprompt": {
    "type": "textview",
    "description": "AI instructions",
    "default": "Summarize the following text in a clear and concise manner",
    "tooltip": "Instructions sent to the AI model before processing each article",
    "height": 80
  },

  "ai_apikey": {
    "type": "button",
    "description": "Set API key",
    "callback": "onChatGPAPIKeySave"
  },

  "ai_example1": {
    "type": "button",
    "description": "Concise (4 sentences)",
    "callback": "onAIPromptExample1"
  },
  "ai_example2": {
    "type": "button",
    "description": "Bullet points",
    "callback": "onAIPromptExample2"
  },
  "ai_example3": {
    "type": "button",
    "description": "Technical",
    "callback": "onAIPromptExample3"
  },
  "ai_example4": {
    "type": "button",
    "description": "Creative",
    "callback": "onAIPromptExample4"
  },
  "ai_example5": {
    "type": "button",
    "description": "Professional",
    "callback": "onAIPromptExample5"
  },
  "ai_example6": {
    "type": "button",
    "description": "Minimal",
    "callback": "onAIPromptExample6"
  },

  "refreshsettingsbutton": {
    "type": "button",
    "description": "Refresh settings",
    "callback": "onRefreshSettings",
    "tooltip": "Press this button to reload settings and update display immediately"
  },

  "refreshFeedsButton": {
    "type": "button",
    "description": "Refresh RSS Feeds",
    "callback": "onRefreshFeeds",
    "tooltip": "Press this button to immediately refresh all RSS feeds and download new articles"
  },

  "searchRssButton": {
    "type": "button",
    "description": "Search for RSS & Atom feeds",
    "callback": "onSearchRssFeeds",
    "tooltip": "Search for RSS and Atom feeds from a website URL. Automatically detects both feed formats."
  },

  "enablecopy": {
    "description": "Enable Copy to clipboard button",
    "type": "switch",
    "default": true
  },

  "temperature": {
    "type": "scale",
    "default": 0.2,
    "min": 0.0,
    "max": 1.0,
    "step": 0.1,
    "description": "Temperature for AI responses",
    "tooltip": "Controls the randomness of the AI's responses. Higher values mean more randomness."
  },

  "enableFeedButton": {
    "description": "Hide feed button",
    "type": "switch",
    "default": false
  },
  "enableTimestamp": {
    "description": "Hide timestamp",
    "type": "switch",
    "default": false
  },
  "enableFavoriteFeature": {
    "description": "Enable favorite feature",
    "type": "switch",
    "default": true
  },
  "loadFavoritesOnStartup": {
    "description": "Load favorites on startup",
    "type": "switch",
    "default": true
  },
  "articleSpacing": {
    "type": "scale",
    "default": 0.2,
    "min": 0.0,
    "max": 1.0,
    "step": 0.05,
    "description": "Article spacing density",
    "tooltip": "Adjust the spacing between articles. Lower values make the list more compact, higher values add more space between articles."
  },
  "showRefreshSeparators": {
    "description": "Show refresh separators between articles",
    "type": "switch",
    "default": true,
    "tooltip": "Shows separator lines with timestamps between articles from different refresh batches"
  },
  "enableDebugLogs": {
    "description": "Enable debug logs",
    "type": "switch",
    "default": false,
    "tooltip": "When enabled, detailed debug information will be logged to the system logs. Only enable when troubleshooting issues."
  },

  "debugVerbosity": {
    "description": "Debug verbosity level",
    "type": "combobox",
    "default": "minimal",
    "options": {
      "minimal": "Minimal (errors only)",
      "basic": "Basic (errors + key operations)",
      "verbose": "Verbose (all debug info)"
    },
    "tooltip": "Control how much debug information is logged"
  },

  "databasePath": {
    "description": "Database base directory",
    "type": "entry",
    "default": "~/.local/share",
    "tooltip": "Base directory where separate Yarr databases are stored (yarr_favorites.db, yarr_read_status.db, etc.)"
  },

  "databaseInfo": {
    "type": "label",
    "description": "Yarr uses separate databases for different data types. Database names are fixed and cannot be changed: yarr_favorites.db, yarr_read_status.db, yarr_article_cache.db, yarr_feed_button_states.db, yarr_refresh.db, yarr_readstatus.db"
  },
  "showReadStatusCheckbox": {
    "description": "Show read status checkbox",
    "type": "switch",
    "default": true
  },
  "dimReadTitles": {
    "description": "Dim read article titles",
    "type": "switch",
    "default": true,
    "tooltip": "When enabled, read titles are slightly dimmed for better visual distinction"
  },
  "readTitleColor": {
    "type": "colorchooser",
    "default": "rgb(180,180,180)",
    "description": "Color for read article titles",
    "tooltip": "Choose a color applied to read titles"
  },
  "enableHeaderFeedButtons": {
    "description": "Enable header feed buttons",
    "type": "switch",
    "default": true,
    "tooltip": "Show toggleable feed buttons below the header to control which feeds are displayed in the article list"
  },

  "openLookingGlass": {
    "type": "button",
    "description": "Open Looking Glass",
    "callback": "onOpenLookingGlass",
    "tooltip": "Opens Cinnamon's Looking Glass debugger to inspect the desklet's JavaScript context"
  },

  "restartDesklet": {
    "type": "button",
    "description": "Restart desklet",
    "callback": "onRestartDesklet",
    "tooltip": "Restarts the desklet to reload all code and settings"
  }
}
