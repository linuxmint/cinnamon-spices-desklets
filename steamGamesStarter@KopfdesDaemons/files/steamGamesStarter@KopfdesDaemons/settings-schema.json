{
  "layout": {
    "type": "layout",
    "pages": ["general-page", "style-page"],
    "general-page": {
      "type": "page",
      "title": "General",
      "sections": ["general-section", "steam-install-section"]
    },
    "style-page": {
      "type": "page",
      "title": "Style",
      "sections": ["style-section"]
    },
    "general-section": {
      "type": "section",
      "title": "General",
      "keys": ["scale-size", "number-of-games"]
    },
    "style-section": {
      "type": "section",
      "title": "Style",
      "keys": ["background-color", "max-desklet-height", "hide-decorations"]
    },
    "steam-install-section": {
      "type": "section",
      "title": "Steam installation",
      "keys": ["steam-install-type", "custom-install-path", "custom-cmd"]
    }
  },
  "steam-install-type": {
    "type": "combobox",
    "default": "system package",
    "description": "Steam installation type",
    "options": {
      "System package": "system package",
      "Flatpak": "flatpak",
      "Custom": "custom install"
    }
  },
  "custom-install-path": {
    "type": "filechooser",
    "default": "~/.steam/steam/steamapps/libraryfolders.vdf",
    "dependency": "steam-install-type=custom install",
    "description": "Select libraryfolders.vdf",
    "allow-none": false,
    "select-dir": false
  },
  "custom-cmd": {
    "type": "entry",
    "default": "/usr/games/steam",
    "dependency": "steam-install-type=custom install",
    "description": "CMD to launch Steam"
  },
  "number-of-games": {
    "type": "spinbutton",
    "default": 10,
    "min": 1,
    "max": 100,
    "step": 1,
    "description": "Maximum number of games"
  },
  "scale-size": {
    "type": "scale",
    "default": 1,
    "min": 0.5,
    "max": 3,
    "step": 0.05,
    "description": "Desklet scale size"
  },
  "max-desklet-height": {
    "type": "scale",
    "default": 32,
    "min": 10,
    "max": 100,
    "step": 1,
    "description": "Maximum height of the desklet"
  },
  "background-color": {
    "type": "colorchooser",
    "default": "rgba(58, 64, 74, 0.5)",
    "description": "Background color"
  },
  "hide-decorations": {
    "type": "checkbox",
    "default": true,
    "description": "Hide decorations"
  }
}
