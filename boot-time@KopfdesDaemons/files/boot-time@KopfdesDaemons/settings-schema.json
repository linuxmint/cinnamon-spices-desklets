{
  "show-headline": {
    "type": "checkbox",
    "default": true,
    "description": "Show headline"
  },
  "loading-animation": {
    "type": "checkbox",
    "default": true,
    "description": "Loading animation"
  },
  "show-accent-color": {
    "type": "checkbox",
    "default": true,
    "description": "Show accent color"
  },
  "accent-color": {
    "type": "colorchooser",
    "default": "rgb(47, 255, 82)",
    "description": "Accent color",
    "dependency": "show-accent-color=true"
  },
  "label-color": {
    "type": "colorchooser",
    "default": "rgb(255, 255, 255)",
    "description": "Label color"
  },
  "values-color": {
    "type": "colorchooser",
    "default": "rgb(255, 255, 255)",
    "description": "Values color"
  },
  "row-background-color": {
    "type": "colorchooser",
    "default": "rgba(0, 0, 0, 0.253)",
    "description": "Row background color"
  },
  "hide-decorations": {
    "type": "checkbox",
    "description": "Hide decorations",
    "default": false
  }
}
