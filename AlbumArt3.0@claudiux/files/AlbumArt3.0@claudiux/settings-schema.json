{
    "height": {
        "default": 300,
        "type": "spinbutton",
        "min": 50,
        "max": 1600,
        "description" : "Height",
        "units" : "pixels",
        "step": 25
    },
    "width": {
        "default": 400,
        "type": "spinbutton",
        "min": 50,
        "max": 1600,
        "description" : "Width",
        "units" : "pixels",
        "step": 50
    },
    "fade-effect": {
        "default": "None",
        "type": "combobox",
        "description" : "Fade",
        "options": {
            "None": "None",
            "Quad": "Quad",
            "Cubic": "Cubic",
            "Quart": "Quart",
            "Quint": "Quint",
            "Sine": "Sine",
            "Expo": "Expo",
            "Circ": "Circ",
            "Elastic": "Elastic",
            "Back": "Back",
            "Bounce": "Bounce"
        }
    },
    "fade-delay": {
        "default": 0,
        "type": "scale",
        "min": 0,
        "max": 300,
        "description" : "Fade delay",
        "units" : "seconds",
        "step": 5,
        "tooltip": "0 means no fade"
    },
    "enable-at-startup": {
        "default": false,
        "type": "switch",
        "description" : "Activate Album Art display at startup"
    },
    "show-title": {
        "default": true,
        "type": "switch",
        "description" : "Show the title"
    },
    "style-font-weight": {
        "type": "combobox",
        "default": "normal",
        "dependency": "show-title",
        "description": "Font weight",
        "options": {
            "normal": "normal",
            "bold": "bold"
        }
    },
    "style-font-family": {
        "type": "combobox",
        "default": "sans-serif",
        "dependency": "show-title",
        "description": "Font family",
        "options": {
            "monospace": "monospace",
            "sans-serif": "sans-serif",
            "serif": "serif",
            "cursive": "cursive",
            "fantasy": "fantasy"
        }
    },
    "style-font-size": {
        "type": "combobox",
        "default": "medium",
        "dependency": "show-title",
        "description": "Font size",
        "options": {
            "xx-small": "xx-small",
            "x-small": "x-small",
            "small": "small",
            "medium": "medium",
            "large": "large",
            "x-large": "x-large",
            "xx-large": "xx-large"
        }
    },
    "style-color": {
        "type": "colorchooser",
        "default": "red",
        "dependency": "show-title",
        "description": "Font color"
    },
    "style-background-color": {
        "type": "colorchooser",
        "default": "lightgray",
        "dependency": "show-title",
        "description": "Background color"
    },
    "desklet-x": {
        "type": "generic",
        "default": -1
    },
    "desklet-y": {
        "type": "generic",
        "default": -1
    }
}
