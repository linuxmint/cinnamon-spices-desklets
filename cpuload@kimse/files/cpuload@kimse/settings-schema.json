{
    "head0": {
        "type": "header",
        "description": "Settings for the CPU Load desklet"
    },
    "head1": {
        "type": "header",
        "description": "General"
    },
    "per-core": {
        "type": "checkbox",
        "description": "Show all CPU cores",
        "default": true,
        "tooltip": "Display utilization of each CPU core rather than total CPU utilization."
    },
    "refresh-interval": {
        "type": "spinbutton",
        "default": 5,
        "step": 1,
        "min": 1,
        "max": 15,
        "units": "seconds",
        "description": "Refresh interval",
        "tooltip": "Increase or decrease refresh interval in seconds."
    },
    "head2": {
        "type": "header",
        "description": "Layout"
    },
    "design": {
        "type": "combobox",
        "default": "thick",
        "description": "Design",
        "options" : {
            "Thin": "thin",
            "Compact": "compact",
            "Thick" : "thick"
        }
    },
    "circle": {
        "type": "combobox",
        "default": "speedometer",
        "description": "Circle",
        "options" : {
            "Speedometer": "speedometer",
            "Full Circle": "full-circle"
        }
    },
    "scale-size": {
        "type": "spinbutton",
        "default": 1,
        "min": 0.4,
        "max": 10,
        "step": 0.05,
        "units": "scale factor",
        "description": "Desklet size",
        "tooltip": "Increase or decrease the size of the desklet."
    },
    "number-of-columns": {
        "type": "spinbutton",
        "default": 2,
        "step": 1,
        "min": 1,
        "max": 16,
        "units": "columns",
        "description": "Number of columns",
        "tooltip": "Increase or decrease number of columns."
    },
    "head3": {
        "type": "header",
        "description": "Colors"
    },
    "font-color": {
        "type": "colorchooser",
        "default": "rgba(255,255,255,1.0)",
        "description": "Font color"
    },
    "color-theme": {
        "type": "combobox",
        "default": "random",
        "description": "Color theme",
        "options" : {
            "Random" : "random",
            "Static": "static",
            "Dynamic": "dynamic"
        }
    },
    "static-theme-color": {
        "type": "colorchooser",
        "default": "rgba(83,199,160,1.0)",
        "description": "Static theme color"
    },
    "head4": {
        "type": "header",
        "description": "Background"
    },
    "show-background": {
        "type": "checkbox",
        "description": "Show background",
        "default": true
    },
    "hide-decorations": {
        "type": "checkbox",
        "description": "Hide decorations",
        "default": false
    }
}
