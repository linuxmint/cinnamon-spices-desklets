{
    "head0": {
        "type": "header",
        "description": "Settings for cpuload@kimse"
    },

    "head1": {
        "type": "header",
        "description": "Visual"
    },
    "hide-decorations": {
        "type": "checkbox",
        "description": "Hide decorations",
        "default": false
    },
    "scale-size": {
        "type": "spinbutton",
        "default": 1,
        "min": 0.5,
        "max": 10,
        "step": 0.2,
        "units": "scale factor",
        "description": "Desklet size",
        "tooltip": "Increase or decrease the size of this desklet using this scale factor."
    },
    "column-count": {
        "type": "spinbutton",
        "default": 2,
        "step": 1,
        "min": 1,
        "max": 16,
        "units": "columns",
        "description": "Column count",
        "tooltip": "Increase or decrease column count."
    },
    "per-core": {
        "type": "checkbox",
        "description": "Show usage for each core",
        "default": true,
        "tooltip": "Shows separate indicator for every CPU core."
    },
    "refresh-interval": {
        "type": "spinbutton",
        "default": 5,
        "step": 1,
        "min": 1,
        "max": 15,
        "units": "seconds",
        "description": "Refresh interval",
        "tooltip": "Increase or decrease refresh interval in seconds."
    }
}
